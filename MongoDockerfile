# Usar una imagen base de Ubuntu
FROM ubuntu:22.04

# Instalar dependencias necesarias y MongoDB Shell (mongosh)
RUN apt-get update && \
    apt-get install -y wget gnupg && \
    wget -qO - https://www.mongodb.org/static/pgp/server-6.0.asc | apt-key add - && \
    echo "deb [ arch=amd64 ] https://repo.mongodb.org/apt/ubuntu focal/mongodb-org/6.0 multiverse" | tee /etc/apt/sources.list.d/mongodb-org-6.0.list && \
    apt-get update && \
    apt-get install -y mongodb-mongosh && \
    rm -rf /var/lib/apt/lists/*

# Crear directorio para los scripts de inicializaci√≥n de MongoDB y copiar los archivos necesarios
COPY db-scripts /usr/src/app/db-scripts/
